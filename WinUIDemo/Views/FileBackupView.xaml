<UserControl
    x:Class="WinUIDemo.Views.FileBackupView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="using:WinUIDemo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinUIDemo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:WinUIDemo.Models"
    xmlns:sys="using:System"
    mc:Ignorable="d">

    <!--
    <UserControl.Resources>
        <ResourceDictionary Source="ms-appx:///Microsoft.UI.Xaml/DensityStyles/Compact.xaml" />
    </UserControl.Resources>
    -->

    <!--  Margin Key: left, top, right, bottom  -->

    <Grid
        x:Name="RootGrid"
        Background="Transparent"
        FocusVisualMargin="-4"
        FocusVisualPrimaryBrush="{ThemeResource QuinaryBrush}"
        FocusVisualPrimaryThickness="1"
        FocusVisualSecondaryBrush="{ThemeResource QuinaryBrush}"
        FocusVisualSecondaryThickness="0">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <AddDeleteThemeTransition />
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <!-- [Now using KeyboardCommandHandler in code-behind]
        <Grid.KeyboardAccelerators>
            <KeyboardAccelerator Key="F1" Invoked="KeyboardAcceleratorF1Invoked" />
            <KeyboardAccelerator Key="Escape" />
        </Grid.KeyboardAccelerators>
        -->

        <!--  Define SplitView Container  -->
        <SplitView
            x:Name="SettingsSplitView"
            Margin="0,0,-15,0"
            CompactPaneLength="96"
            DisplayMode="Overlay"
            IsPaneOpen="False"
            OpenPaneLength="370"
            PanePlacement="Right">

            <!--  Settings  -->
            <SplitView.Pane>
                <ScrollViewer VerticalScrollMode="Auto">
                    <!--
                        The "header" StackPanel is aligned to the top of the panel, and the "footer"
                        StackPanel is aligned to the bottom of the panel. The RelativePanel.AlignLeftWithPanel
                        and RelativePanel.AlignRightWithPanel properties can be used to make the additional
                        controls fill the horizontal space of the panel.
                    -->
                    <RelativePanel
                        BorderBrush="Transparent"
                        BorderThickness="2"
                        CornerRadius="4">

                        <Rectangle
                            x:Name="AcrylicRectangle"
                            Margin="-5,-3,-5,-3"
                            Fill="{ThemeResource CustomAcrylicBrush}"
                            Opacity="0.6"
                            RelativePanel.AlignRightWithPanel="True"
                            Stretch="UniformToFill" />

                        <!--  Header  -->
                        <StackPanel
                            x:Name="spHeader"
                            Margin="20,20,20,20"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            BorderBrush="{ThemeResource BorderBrush}"
                            BorderThickness="2"
                            CornerRadius="4"
                            Orientation="Vertical"
                            RelativePanel.AlignLeftWithPanel="True"
                            RelativePanel.AlignRightWithPanel="True"
                            RelativePanel.AlignTopWithPanel="True">
                            <StackPanel.ChildrenTransitions>
                                <TransitionCollection>
                                    <AddDeleteThemeTransition />
                                </TransitionCollection>
                            </StackPanel.ChildrenTransitions>
                            <Grid Margin="0" RowDefinitions="Auto,Auto,*">
                                <!--  Header Area  -->
                                <Grid
                                    Grid.Row="0"
                                    Margin="-2,-2,-2,-5"
                                    Background="{ThemeResource BackgroundBrush}"
                                    ColumnDefinitions="*,*">
                                    <TextBlock
                                        Grid.Column="0"
                                        Margin="12"
                                        HorizontalAlignment="Left"
                                        FontSize="24"
                                        Foreground="{ThemeResource PrimaryBrush}"
                                        Text="Settings" />
                                    <SymbolIcon
                                        Grid.Column="1"
                                        Margin="12"
                                        HorizontalAlignment="Right"
                                        Foreground="{ThemeResource PrimaryBrush}"
                                        Symbol="Setting" />
                                </Grid>
                                <!--  Separator  -->
                                <Rectangle
                                    Grid.Row="1"
                                    Height="4"
                                    Margin="-15,5,-15,5"
                                    Stroke="{ThemeResource BorderBrush}"
                                    StrokeThickness="1" />
                                <!--  Settings Area  -->
                                <StackPanel
                                    Grid.Row="2"
                                    Margin="10"
                                    Orientation="Vertical"
                                    Spacing="6">
                                    <CheckBox
                                        x:Name="cbWorkLocation"
                                        Checked="cbWorkLocationChecked"
                                        Content="At work"
                                        IsChecked="True"
                                        IsEnabled="{x:Bind IsBusy, Mode=OneWay, Converter={StaticResource BooleanInverter}}"
                                        ToolTipService.ToolTip="Preconfigures the temporary file storage during the archive process"
                                        Unchecked="cbWorkLocationChecked" />
                                    <CheckBox
                                        x:Name="cbOpenExplorer"
                                        Checked="cbOpenExplorerChecked"
                                        Content="Open explorer when finished"
                                        IsChecked="True"
                                        IsEnabled="{x:Bind IsBusy, Mode=OneWay, Converter={StaticResource BooleanInverter}}"
                                        ToolTipService.ToolTip="Launches the Windows Explorer application"
                                        Unchecked="cbOpenExplorerChecked" />
                                    <CheckBox
                                        x:Name="cbBackupInitial"
                                        Checked="cbBackupInitialChecked"
                                        Content="Full backup if no index found"
                                        IsChecked="False"
                                        IsEnabled="{x:Bind IsBusy, Mode=OneWay, Converter={StaticResource BooleanInverter}}"
                                        ToolTipService.ToolTip="You'll need patience for this"
                                        Unchecked="cbBackupInitialChecked" />
                                    <CheckBox
                                        x:Name="cbRandomBackdrop"
                                        Checked="cbRandomBackdropChecked"
                                        Content="Random backdrop color on startup"
                                        IsChecked="False"
                                        IsEnabled="{x:Bind IsBusy, Mode=OneWay, Converter={StaticResource BooleanInverter}}"
                                        ToolTipService.ToolTip="Applies a new acrylic color on each startup"
                                        Unchecked="cbRandomBackdropChecked" />
                                    <ComboBox
                                        x:Name="ThreadComboBox"
                                        Margin="2,5"
                                        IsEnabled="{x:Bind IsBusy, Mode=OneWay, Converter={StaticResource BooleanInverter}}"
                                        ItemsSource="{x:Bind ThreadCount, Mode=OneWay}"
                                        SelectedIndex="0"
                                        SelectionChanged="OnThreadSelectionChanged"
                                        ToolTipService.ToolTip="Select max thread count">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Spacing="3">
                                                    <TextBlock Text="Use up to" />
                                                    <TextBlock Text="{Binding}" />
                                                    <TextBlock Text="threads" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <ComboBox
                                        x:Name="SpoiledComboBox"
                                        Margin="2,5"
                                        IsEnabled="{x:Bind IsBusy, Mode=OneWay, Converter={StaticResource BooleanInverter}}"
                                        ItemsSource="{x:Bind StaleCount, Mode=OneWay}"
                                        SelectedIndex="3"
                                        SelectionChanged="OnSpoiledSelectionChanged"
                                        ToolTipService.ToolTip="Select freshness amount">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Spacing="3">
                                                    <TextBlock Text="Consider stale after" />
                                                    <TextBlock Text="{Binding Mode=OneWay, Converter={StaticResource DaysToTime}}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <Button
                                        x:Name="btnEditIndex"
                                        MinHeight="34"
                                        Margin="2,5"
                                        Padding="6,3,6,3"
                                        Click="btnEditIndexDatabaseOnClick"
                                        IsEnabled="{x:Bind IsBusy, Mode=OneWay, Converter={StaticResource BooleanInverter}}"
                                        Style="{StaticResource MyButtonStyle}"
                                        ToolTipService.ToolTip="Edit the repo's database">
                                        <Button.Content>
                                            <Grid>
                                                <ProgressRing
                                                    Margin="0"
                                                    VerticalAlignment="Center"
                                                    Foreground="{ThemeResource QuinaryBrush}"
                                                    Visibility="{x:Bind IsBusy, Mode=OneWay, Converter={StaticResource BooleanVisibility}, ConverterParameter=False}" />
                                                <Image
                                                    Width="30"
                                                    Height="30"
                                                    Margin="2,2,0,0"
                                                    HorizontalAlignment="Right"
                                                    Source="/Assets/Edit.png"
                                                    Visibility="{x:Bind IsBusy, Mode=OneWay, Converter={StaticResource BooleanVisibilityInverse}, ConverterParameter=False}" />
                                            </Grid>
                                        </Button.Content>
                                    </Button>
                                    <TextBox
                                        x:Name="tbBuffer"
                                        Margin="1,14"
                                        IsEnabled="{x:Bind IsBusy, Mode=OneWay, Converter={StaticResource BooleanInverter}}"
                                        ToolTipService.ToolTip="Temporary holding area for identified file changes">
                                        <TextBox.Header>
                                            <TextBlock
                                                Margin="0"
                                                Padding="0"
                                                FontWeight="Medium"
                                                Foreground="{ThemeResource HeaderBrush}"
                                                Text="Buffering folder" />
                                        </TextBox.Header>
                                    </TextBox>

                                    <!--  Statistics  -->
                                    <Pivot
                                        x:Name="settingPivot"
                                        Margin="1,10"
                                        SelectionChanged="settingPivotOnSelectionChanged">
                                        <!--
                                        <Pivot.Title>
                                            <TextBlock
                                                Margin="0"
                                                Padding="0"
                                                FontWeight="Medium"
                                                Foreground="{ThemeResource HeaderBrush}"
                                                Text="Statistics" />
                                        </Pivot.Title>
                                        -->
                                        <PivotItem x:Name="piTime">
                                            <PivotItem.Header>
                                                <ctrl:TabHeader
                                                    Label="CPU"
                                                    SelectedImage="/Assets/Searcher.png"
                                                    ShowOutline="False"
                                                    UnselectedImage="/Assets/SearcherDisabled.png" />
                                            </PivotItem.Header>
                                            <TextBlock
                                                Margin="6,10"
                                                Foreground="{ThemeResource PrimaryBrush}"
                                                Text="{x:Bind TotalCPU, Mode=OneWay}" />
                                        </PivotItem>
                                        <PivotItem x:Name="piMemory">
                                            <PivotItem.Header>
                                                <ctrl:TabHeader
                                                    Label="Memory"
                                                    SelectedImage="/Assets/Searcher.png"
                                                    ShowOutline="False"
                                                    UnselectedImage="/Assets/SearcherDisabled.png" />
                                            </PivotItem.Header>
                                            <TextBlock
                                                Margin="6,10"
                                                Foreground="{ThemeResource PrimaryBrush}"
                                                Text="{x:Bind MemoryCount, Mode=OneWay}" />
                                        </PivotItem>
                                        <PivotItem x:Name="piTally">
                                            <PivotItem.Header>
                                                <ctrl:TabHeader
                                                    Label="Files"
                                                    SelectedImage="/Assets/Searcher.png"
                                                    ShowOutline="False"
                                                    UnselectedImage="/Assets/SearcherDisabled.png" />
                                            </PivotItem.Header>
                                            <TextBlock
                                                Margin="6,10"
                                                Foreground="{ThemeResource PrimaryBrush}"
                                                Text="{x:Bind InspectionCount, Mode=OneWay}" />
                                        </PivotItem>
                                        <PivotItem x:Name="piDisk">
                                            <PivotItem.Header>
                                                <ctrl:TabHeader
                                                    Label="Disk"
                                                    SelectedImage="/Assets/Searcher.png"
                                                    ShowOutline="False"
                                                    UnselectedImage="/Assets/SearcherDisabled.png" />
                                            </PivotItem.Header>
                                            <TextBlock
                                                Margin="6,10"
                                                Foreground="{ThemeResource PrimaryBrush}"
                                                Text="{x:Bind DiskSpace, Mode=OneWay}" />
                                        </PivotItem>
                                    </Pivot>

                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!--  Footer  -->
                        <StackPanel
                            x:Name="spFooter"
                            Margin="20,20,20,20"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            BorderBrush="{ThemeResource BorderBrush}"
                            BorderThickness="2"
                            CornerRadius="4"
                            Orientation="Vertical"
                            RelativePanel.AlignBottomWithPanel="True"
                            RelativePanel.AlignLeftWithPanel="True"
                            RelativePanel.AlignRightWithPanel="True">
                            <StackPanel.ChildrenTransitions>
                                <TransitionCollection>
                                    <AddDeleteThemeTransition />
                                </TransitionCollection>
                            </StackPanel.ChildrenTransitions>
                            <!--  Version Area  -->
                            <Grid
                                Margin="0"
                                Background="{ThemeResource BackgroundBrush}"
                                RowDefinitions="Auto">
                                <!--
                                    This serves no purpose, but exists as an example of how to make you own spinner.
                                -->
                                <Image
                                    Width="30"
                                    Height="30"
                                    Margin="10,5,12,5"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Opacity="0.8"
                                    Source="/Assets/SpinnerGear.png">
                                    <Image.Resources>
                                        <Storyboard x:Name="StoryboardPath" RepeatBehavior="Forever">
                                            <DoubleAnimation
                                                x:Name="dblAnimation"
                                                Storyboard.TargetName="spinnerTransform"
                                                Storyboard.TargetProperty="Angle"
                                                From="0"
                                                To="360"
                                                Duration="00:00:01.8">
                                                <DoubleAnimation.EasingFunction>
                                                    <!-- <CircleEase EasingMode="EaseInOut" /> -->
                                                    <BackEase Amplitude="0.5" EasingMode="EaseInOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </Image.Resources>
                                    <Image.RenderTransform>
                                        <RotateTransform x:Name="spinnerTransform" CenterX="15" CenterY="15" />
                                    </Image.RenderTransform>
                                </Image>
                                <TextBlock
                                    Grid.Row="0"
                                    Margin="12,5,10,5"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="{ThemeResource PrimaryBrush}"
                                    Text="{x:Bind local:AssemblyHelper.GetVersion()}" />
                            </Grid>
                        </StackPanel>

                    </RelativePanel>
                </ScrollViewer>
            </SplitView.Pane>

            <!--  Content  -->
            <Grid x:Name="mainGrid" RowDefinitions="Auto,Auto,Auto,2*,Auto">

                <!--  Title  -->
                <Grid Grid.Row="0" ColumnDefinitions="*,*">
                    <TextBlock
                        x:Name="tbAppName"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        FontSize="24"
                        Foreground="DimGray"
                        Text="{x:Bind local:AssemblyHelper.GetAssemblyName()}" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        FontSize="18"
                        Foreground="DimGray"
                        Opacity="0.6"
                        Text="{x:Bind Path=sys:String.Format('{0:dddd, MMMM d, yyyy}', PageTime)}" />
                </Grid>

                <!--  Separator  -->
                <Rectangle
                    Grid.Row="1"
                    Height="1"
                    Margin="-15,5,-15,3"
                    Stroke="{ThemeResource BorderBrush}" />

                <!--  Control Input and Progress  -->
                <StackPanel
                    Grid.Row="2"
                    Margin="0,10,0,2"
                    HorizontalAlignment="Stretch"
                    Orientation="Horizontal">
                    <!--  [Example using FontIcon control for the graphic]
                    <FontIcon
                        Margin="5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="28"
                        Foreground="{ThemeResource SecondaryBrush}"
                        Glyph="&#xec50;" />
                    -->
                    <!--  [Example using Image control for the graphic]
                        <Image
                            Width="38"
                            Margin="1"
                            Opacity="0.7"
                            Source="/Assets/RepoFolderSmall.png" />
